<UserControl x:Class="MobileMuni.MapControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:maps="clr-namespace:Microsoft.Phone.Controls.Maps;assembly=Microsoft.Phone.Controls.Maps"
    xmlns:location="clr-namespace:System.Device.Location;assembly=System.Device"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <maps:Map HorizontalAlignment="Stretch" Name="Map" VerticalAlignment="Stretch"                 
                CopyrightVisibility="Collapsed" LogoVisibility="Collapsed" ZoomLevel="17">
            <maps:Map.Center>
                <location:GeoCoordinate Altitude="NaN" Course="NaN" HorizontalAccuracy="NaN" Latitude="37.7793" Longitude="-122.4192" Speed="NaN" VerticalAccuracy="NaN" />
            </maps:Map.Center>
        </maps:Map>
    </Grid>
</UserControl>
